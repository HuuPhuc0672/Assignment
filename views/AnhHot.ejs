<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Ảnh Nền Di Động</title>
</head>
<% include Nav%>
<body class="container">
<H3 style="font-family: 'Times New Roman';text-align: center; margin: 10px; margin-top: 36px">  Ảnh Mới</H3>



  <div style="margin: 6px;margin-bottom: 30px " class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" >
    <% for ( var i=0; i<data.length; i++ ) {  %>
    <div class="col" >
      <div class="card shadow-sm">
        <img src="<%= data[i].linkAnh %>">

        <div class="card-body">
          <p class="card-text" style=""> <%= data[i].tAnh %>  </p>
          <p class="card-text" style="font-size: 14px;color: #6c757d "> <%= data[i].ndAnh %>  </p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <form method="post" action="/dataUpdate" enctype="application/x-www-form-urlencoded">
                <a href="/suaAnh" >
                  <button class="btn btn-sm btn-outline-secondary" name="idPhotoUpdate" type="submit" value="<%= data[i]._id %>">
                    Sửa
                  </button>
                </a>
              </form>
             <!-- <a  class="btn btn-sm btn-outline-secondary" href="/suaAnh">Sửa </a>-->
              <form method="post" action="/xaoAnh" enctype="application/x-www-form-urlencoded">
                <button name="id" type="submit" value="<%= data[i]._id %>" class="btn btn-sm btn-outline-secondary">Xóa</button>
              </form>
            </div>
            <small class="text-muted"><%= data[i].ntAnh %></small>
          </div>
        </div>
      </div>
    </div>
      <% }%>
  </div>






<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">

</script>
</body>
</html>
